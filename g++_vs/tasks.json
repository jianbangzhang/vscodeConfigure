{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task to compile and run C++ file"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "group": "test",
            "dependsOn": ["Build and Run"],
            "problemMatcher": []
        }
    ]
}

